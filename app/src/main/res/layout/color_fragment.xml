<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="1050dp"
    android:orientation="vertical"
    android:minWidth="550dp">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:orientation="vertical">

    <android.support.design.widget.FloatingActionButton

        android:layout_gravity="center"
        android:id="@+id/yello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/holo_orange_light"
        app:elevation="4dp"   />

    <android.support.design.widget.FloatingActionButton

        android:layout_gravity="center"
        android:id="@+id/green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/holo_green_light"
        app:elevation="4dp"   />

    <android.support.design.widget.FloatingActionButton

        android:layout_gravity="center"
        android:id="@+id/red"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/holo_red_light"
        app:elevation="4dp"   />
    <android.support.design.widget.FloatingActionButton

        android:layout_gravity="center"
        android:id="@+id/blue"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/holo_blue_dark"
        app:elevation="4dp"   />

    <android.support.design.widget.FloatingActionButton

        android:layout_gravity="center"
        android:id="@+id/purple"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/holo_purple"
        app:elevation="4dp"   />
</LinearLayout>
</RelativeLayout>