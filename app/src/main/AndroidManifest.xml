<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.itstest.textselection" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.DOWNLOAD_WITHOUT_NOTIFICATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Splash"
            android:theme="@style/GalaxyZooThemeToolbarDarkOverflow" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChapterActivity"
            android:label="@string/title_activity_chapter" >
        </activity>
        <activity
            android:name=".VersesActivity"
            android:label="@string/title_activity_verses" >
        </activity>
        <activity
            android:name=".PodcastActivity"
            android:label="@string/title_activity_podcast" >
        </activity>
        <activity
            android:name=".Download"
            android:label="@string/title_activity_download" >

        </activity>
    </application>

</manifest>
